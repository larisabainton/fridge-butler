<div class="my-account">
  <h1><%= @user.first_name %> <%= @user.last_name %></h1>
  <h3><%= @user.email %></h3>

  <% if @user == current_user %>
    <%= button_to 'Edit', edit_user_path(@user), method: :get %>
    <%= button_to 'Delete', @user, method: :delete, data: { confirm: 'You sure?' }  %>
  <% end %>
</div>
