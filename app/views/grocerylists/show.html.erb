<div class="fridge-page">
  <div class="list">
    <h1><%= link_to @grocerylist.name, edit_grocerylist_path(@grocerylist) %></h1>

    <table>
      <% @groceries.each do |g| %>
      <tr>
        <td>
          <%= link_to g.name, edit_grocery_path(g) %>
        </td>
        <td>
          <div class="accept-button">
            <%= link_to '', accept_grocery_path(g), class: 'fa fa-check' %>
          </div>
        </td>
        <td>
          <div class="delete-button">
            <%= link_to '', g, method: :delete, data: { confirm: 'You sure?' }, class: 'fa fa-times' %>
          </div>
        </td>
      </tr>
      <% end %>
    </table>
  </div>

  <div class="add-things">
    <h2>Add a Grocery:</h2>
    <div class="new-grocery">
      <%= form_for @grocery do |f| %>
        <%= f.text_area :name, placeholder: 'Enter a name' %>
        <%= f.text_area :quantity, placeholder: 'Enter an amount' %>
        <%= f.label :fridgecategory_id, "Category:" %>
        <%= f.collection_radio_buttons(:fridgecategory_id, @fridgecategories, :id, :name) %>
        <%= f.submit "Add Grocery" %>
      <% end %>
    </div>
  </div>
</div>
